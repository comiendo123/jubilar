<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".pagina_principal"
    tools:showIn="@layout/app_bar_pagina_principal">

    <FrameLayout
        android:id="@+id/contenedoroficial"
        android:layout_width="match_parent"
        android:layout_height="627dp"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="3dp">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="395dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnmisanuncios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:onClick="clickfragments"
            android:text="Mis Anuncios" />
            android:onClick="clickfragments"


        <Button
            android:id="@+id/btnmisfavoritos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clickfragments"
            android:text="Mis Favoritos" />
               android:onClick="clickfragments"


        <Button
            android:id="@+id/btnmisamigos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clickfragments"
            android:text="Mis Amigos" />
           android:onClick="clickfragments"


        <Button
            android:id="@+id/btnmiscitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clickfragments"
            android:text="Mis Citas" />
             android:onClick="clickfragments"

    </LinearLayout>


</RelativeLayout>